{
  "name": "apis",
  "type": "module",
  "version": "1.0.0",
  "license": "MIT",
  "exports": {
    ".": {
      "types": "./dist/app.d.ts",
      "import": "./dist/app.js"
    },
    "./auth": {
      "types": "./dist/lib/auth.d.ts",
      "import": "./dist/lib/auth.js"
    },
    "./db": {
      "types": "./dist/db/index.d.ts",
      "import": "./dist/db/index.js"
    }
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node ./dist/src/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "auth:generate": "pnpm dlx @better-auth/cli@latest generate --config ./src/lib/auth.ts --output ./src/db/new-auth-schema.ts --yes",
    "test": "cross-env NODE_ENV=test vitest",
    "build": "tsc && tsc-alias"
  },
  "dependencies": {
    "@hono/node-server": "^1.18.1",
    "@hono/zod-openapi": "^1.0.2",
    "@hono/zod-validator": "^0.7.6",
    "@scalar/hono-api-reference": "^0.9.13",
    "@sendgrid/mail": "^8.1.6",
    "better-auth": "^1.4.5",
    "dotenv": "^17.2.1",
    "dotenv-expand": "^12.0.2",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.8.2",
    "hono": "^4.9.6",
    "hono-pino": "^0.10.1",
    "pino": "^9.7.0",
    "pino-pretty": "^13.1.1",
    "postgres": "^3.4.7",
    "stoker": "2.0.1",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.1.0",
    "@types/node": "^24.2.0",
    "@workspace/eslint-config": "workspace:*",
    "cross-env": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.32.0",
    "eslint-plugin-format": "^1.0.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.1"
  }
}